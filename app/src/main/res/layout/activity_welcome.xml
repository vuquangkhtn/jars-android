<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/d50"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_logo"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="@dimen/d250"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/d15"
        android:layout_marginRight="@dimen/d15"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_online_mode"
            android:background="@drawable/button_custom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/d20"
            android:textColor="@android:color/white"
            android:text="ONLINE MODE" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/d20"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/font_size_15"
            android:text="or"/>
        <Button
            android:id="@+id/btn_offline_mode"
            android:background="@drawable/button_custom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/d60"
            android:textColor="@android:color/white"
            android:enabled="false"
            android:text="Offline Mode" />

    </LinearLayout>

</RelativeLayout>